<div class="clock">
    <span id="clock-time"></span>
<script>
    (function() {
        const timer = document.getElementById('clock-time');
        function update() {
            timer.textContent = new Date().toLocaleTimeString('cs-CZ');
        }
        update();
        setInterval(update, 1000);
    })();
    </script>
    </div>
<style>
    .clock {
        display: flex;
        justify-content: center;
        align-items: center;
        font-weight: bold;
    }
</style>

<div class ="date">
    <span id="date-display"></span>
    <script>
(function() {
const dateElement = document.getElementById('date-display');
const date = new Date();
const formattedDate = date.toLocalDateString('cs-CZ', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
})();
dateElement.textContent = 'dnes je $(formattedDate)';
})();
</script>
</div>

</style>
.date {
    display: flex;
    justify-content: center;
    align-items: center;
}
</style>