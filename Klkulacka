        }

        #calc-input {
            grid-column: span 4;
            padding: 15px;
            font-size: 24px;
            text-align: right;
            border: 2px solid #667eea;
            border-radius: 10px;
            margin-bottom: 10px;
            font-weight: bold;
            color: #333;
        }

        #calc-input:focus {
            outline: none;
            border-color: #764ba2;
            box-shadow: 0 0 5px rgba(102, 126, 234, 0.5);
        }

        .buttons {
            display: contents;
